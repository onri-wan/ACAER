extends layout 

block post

    h2 !{post.title}
    img(src=`${post.image}`)

    form(action=`/post/likePost/${post.id}?_method=PUT`, method="POST") 
        button(type="submit") Like

    h3 Likes: !{post.likes}

    //- if an owner of a post is logged in, then they can delete their own post
    if post.user == user.id
        form(action=`/post/deletePost/${post.id}?_method=DELETE`, method="POST") 
            button(type="submit") Trash

    p !{post.caption}

    a(href='/profile') Return to Profile
    a(href='/feed') Return to Feed